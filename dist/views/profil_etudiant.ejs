const openModaledit = document.querySelectorAll('[id^="myeditmodal"]');

const edit = document.getElementById("editmodal");

openModaledit.forEach(function (button) {
  button.addEventListener("click", function () {
    edit.style.display = "block"; // Affichez le modal

  });
});

// Gestionnaire d'événement pour le bouton de fermeture du modal
const closeModaledit = document.getElementById("closeModaledit");
closeModaledit.addEventListener("click", function () {
  edit.style.display = "none"; // Masquez le modal

});

  // Lorsque l'utilisateur clique en dehors du modal, cachez le modal
  window.onclick = function(event) {
      if (event.target == edit) {
          edit.style.display = "none";
      }
    }
</script>


